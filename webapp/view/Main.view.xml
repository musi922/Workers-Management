<mvc:View
	controllerName="workersWebsite.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'workersWebsite/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<subHeader>
		<Toolbar >
		<ToolbarSpacer />
		<Button text="Create Product" type="Emphasized" press="onCreateProductPress"/>
		</Toolbar>
		</subHeader>
		<content>
			<VBox>
        <Table id="idTable" class="idTable" items="{/Workers}" growing="true" growingScrollToLoad="true" growingThreshold="18">
        <columns>
            <Column>
                <Text text="ID"/>
            </Column>
            <Column>
                <Text text="First Name"/>
            </Column>
            <Column>
                <Text text="Last Name"/>
            </Column>
            <Column>
                <Text text="Email"/>
            </Column>
            <Column>
                <Text text="Position"/>
            </Column>
            <Column>
                <Text text="Salary"/>
            </Column>
           
            <Column>
                <Text text="Actions"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                <Text text="{ID}"/>
                <Text text="{firstName}"/>
                <Text text="{lastName}"/>
                <Text text="{email}"/>
                <Text text="{position}"/>
                <Text text="{salary}"/>

                    <HBox>
                        <Button text="Edit" type="Default" press="onEditPress" />
                        <Button text="Delete" press="onDeletePress" />
                    </HBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
  </VBox>
		</content>
	</Page>

</mvc:View>